<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent">
 
    <TextView

        android:id="@+id/textView7"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:fontFamily="@font/agbalumo"

        android:text="SmartCane"

        android:textAlignment="center"

        android:textSize="60sp"

        android:visibility="visible"

        android:accessibilityHeading="true"

        android:contentDescription="Título: SmartCane"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.495"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.238"

        tools:visibility="visible" />
 
    <TextView

        android:id="@+id/textView10"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:fontFamily="@font/lexend_semibold"

        android:text="Elegir rol"

        android:textAlignment="center"

        android:textSize="34sp"

        android:accessibilityHeading="true"

        android:contentDescription="Seleccione un rol"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.498"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/textView7"

        app:layout_constraintVertical_bias="0.168" />
 
    <Button

        android:id="@+id/id_cane"

        android:layout_width="251dp"

        android:layout_height="90dp"

        android:fontFamily="@font/agbalumo"

        android:text="No vidente"

        android:textSize="30sp"

        android:contentDescription="Seleccionar rol: No vidente"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/textView10"

        app:layout_constraintVertical_bias="0.113" />
 
    <Button

        android:id="@+id/id_family"

        android:layout_width="251dp"

        android:layout_height="90dp"

        android:fontFamily="@font/agbalumo"

        android:text="Familiar"

        android:textSize="30sp"

        android:contentDescription="Seleccionar rol: Familiar"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/textView10"

        app:layout_constraintVertical_bias="0.494" />

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="0dp"

        android:layout_height="100dp"

        android:background="#C4FFC9"

        android:importantForAccessibility="no"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent">

        <ImageView

            android:id="@+id/logo_unlam"

            android:layout_width="163dp"

            android:layout_height="100dp"

            android:contentDescription="Logo de la Universidad Nacional de La Matanza"

            android:visibility="visible"

            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"

            app:srcCompat="@drawable/logo_unlam" />

        <ImageView

            android:id="@+id/logo_diit"

            android:layout_width="169dp"

            android:layout_height="100dp"

            android:contentDescription="Logo del Departamento de Ingeniería e Investigaciones Tecnológicas"

            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toTopOf="parent"

            app:srcCompat="@drawable/diit" />
    </androidx.constraintlayout.widget.ConstraintLayout>
 
</androidx.constraintlayout.widget.ConstraintLayout>

 