<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="00dp"
        android:layout_height="100dp"
        android:background="#C4FFC9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo_unlam"
            android:layout_width="163dp"
            android:layout_height="100dp"
            android:contentDescription="Logo de la Universidad Nacional de La Matanza"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo_unlam" />

        <ImageView
            android:id="@+id/logo_diit"
            android:layout_width="169dp"
            android:layout_height="100dp"
            android:contentDescription="Logo del Departamento de Ingeniería e Investigaciones Tecnológicas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/diit" />
    </androidx.constraintlayout.widget.ConstraintLayout>
 
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/agbalumo"
        android:text="SmartCane"
        android:textAlignment="center"
        android:textSize="60sp"
        android:contentDescription="Texto principal: SmartCane"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.233"
        tools:visibility="visible" />
 
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend_semibold"
        android:text="Contador de Pasos"
        android:textAlignment="center"
        android:textSize="34sp"
        android:contentDescription="Texto secundario: Contador de pasos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.15" />
 
    <Button
        android:id="@+id/button_volver"
        android:layout_width="200dp"
        android:layout_height="76dp"
        android:layout_marginBottom="216dp"
        android:fontFamily="@font/agbalumo"
        android:text="Volver"
        android:textColorLink="@color/design_default_color_secondary"
        android:textSize="30sp"
        android:contentDescription="Botón para volver a la pantalla anterior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.074"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/Cant_pasos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="Cantidad actual de pasos"
        android:fontFamily="@font/lexend_semibold"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/button_volver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.182" />
</androidx.constraintlayout.widget.ConstraintLayout>